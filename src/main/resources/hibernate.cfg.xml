<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">sr05051420</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Classes mapeadas -->
        <mapping class="org.example.entity.UsuarioEntity"/>
        <mapping class="org.example.entity.RelatorioEntity"/>
        <mapping class="org.example.entity.ProdutoEntity"/>
        <mapping class="org.example.entity.PacienteEntity"/>
        <mapping class="org.example.entity.EnderecoEntity"/>
        <mapping class="org.example.entity.MedicoEntity"/>
        <mapping class="org.example.entity.ConsultaEntity"/>
        <mapping class="org.example.entity.AmostrasLabEntity"/>
        <mapping class="org.example.entity.ProntuarioEntity"/>

    </session-factory>
</hibernate-configuration>